@model List<Project_63133302.Models.DonHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBanHang.cshtml";
}

<section class="items-center lg:flex bg-gray-50  font-poppins  ">
    <div class="justify-center flex-1  px-4 py-4 mx-auto lg:py-8 md:px-6">
        <div class="pt-4 bg-white rounded shadow ">
            <div class="flex px-6 pb-4 border-b ">
                <h2 class="text-xl font-bold ">Danh sách đơn đã mua</h2>
            </div>
            <div class="p-4 overflow-x-auto">
                <table class="w-full table-auto">
                    <thead>
                        <tr class="text-lg text-left text-gray-500 ">
                            <th class="px-6 pb-3 font-medium">
                                ID
                            </th>
                            <th class="px-6 pb-3 font-medium ">Ngày đặt hàng </th>
                            <th class="px-6 pb-3 font-medium">Số điện thoại </th>
                            <th class="px-6 pb-3 font-medium">Trạng thái </th>
                            <th class="px-6 pb-3 font-medium">Tổng tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-lg bg-gray-100  ">
                                <td class="px-6 py-5 font-medium">
                                    #@item.Id
                                </td>
                                <td class="px-6 py-5 font-medium ">
                                    @item.NgayTaoDon.Value.ToString("dd/MMM/yyyy hh:mm")
                                </td>
                                <td class="px-6 py-5 font-medium ">
                                    @item.DienThoai
                                </td>
                                <td>
                                    <span class="inline-block px-2 py-1 text-center text-green-600 bg-green-100 rounded-full  ">
                                        @item.TrangThai
                                    </span>
                                </td>
                                <td class="px-6 py-5 ">
                                    <a href="/DonHang_63133302/ChiTietDonHang/@item.Id"
                                       class="px-4 py-2 font-medium text-blue-500 border border-blue-500 rounded-md     hover:text-gray-100 hover:bg-blue-500">
                                        Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

