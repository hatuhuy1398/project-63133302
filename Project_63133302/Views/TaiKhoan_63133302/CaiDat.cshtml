@model Project_63133302.Models.KhachHang
@{
    ViewBag.Title = "CaiDat";
    Layout = "~/Views/Shared/_LayoutBanHang.cshtml";
}

<section class=" py-1 bg-blueGray-50">
    <div class="w-full lg:w-8/12 px-4 mx-auto mt-6">
        <div class="relative flex flex-col min-w-0 break-words w-full mb-6 shadow-lg rounded-lg bg-blueGray-100 border-0">
            <div class="rounded-t bg-white mb-0 px-6 py-6">
                <div class="text-center flex justify-between">
                    <h6 class="text-blueGray-700 text-xl font-bold">
                        Tài khoản cá nhân
                    </h6>

                </div>
            </div>
            <div class="flex-auto px-4 lg:px-10 py-10 pt-0">
                <form action="/TaiKhoan_63133302/CapNhatTaiKhoan" method="post">
                    <h6 class="text-blueGray-400 text-sm mt-3 mb-6 font-bold uppercase">
                        Thông tin cá nhân
                    </h6>
                    <div class="flex flex-wrap">
                        <div class="w-full lg:w-6/12 px-4">
                            <div class="relative w-full mb-3">
                                <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2" htmlfor="grid-password">
                                    Họ
                                </label>
                                <input name="ho" type="text" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" value="@Model.Ho">
                            </div>
                        </div>
                        <div class="w-full lg:w-6/12 px-4">
                            <div class="w-[100px]">Giới Tính</div>
                            <div class="flex gap-4">
                                <label class="flex bg-gray-100 text-gray-700 rounded-md px-3 py-2 my-3  hover:bg-indigo-300 cursor-pointer ">
                                    <input type="radio" name="GioiTinh" value="true" required @(Model?.GioiTinh == true ? "checked" : "" )>
                                    <i class="pl-2">Nam</i>
                                </label>

                                <label class="flex bg-gray-100 text-gray-700 rounded-md px-3 py-2 my-3  hover:bg-indigo-300 cursor-pointer ">
                                    <input type="radio" name="GioiTinh" value="false" required @(Model?.GioiTinh == false ? "checked" : "")>
                                    <i class="pl-2">Nữ</i>
                                </label>
                            </div>
                        </div>
                        <div class="w-full lg:w-6/12 px-4">
                            <div class="relative w-full mb-3">
                                <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2" htmlfor="grid-password">
                                    Tên
                                </label>
                                <input type="text" name="Ten" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" value="@Model.Ten">
                            </div>
                        </div>
                        <div class="w-full lg:w-6/12 px-4">
                            <label class="leading-loose">Ngày Sinh</label>
                            <div class="relative focus-within:text-gray-600 text-gray-400">

                                <input value="@Model.NgaySinh.Value.ToString("yyyy-MM-dd")" required id="ngaySinh" type="date" class="pr-4 pl-2 py-2 border focus:ring-gray-500 focus:border-gray-900 w-full sm:text-sm border-gray-300 rounded-md focus:outline-none text-gray-600" placeholder="24/05/2003" name="NgaySinh">
                            </div>
                        </div>
                    </div>

                    <hr class="mt-6 border-b-1 border-blueGray-300">

                    <h6 class="text-blueGray-400 text-sm mt-3 mb-6 font-bold uppercase">
                        Thông tin liên lạc
                    </h6>
                    <div class="flex gap-2 ">
                        <div class=" px-4 w-1/2">
                            <div class="relative w-full mb-3">
                                <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2" htmlfor="grid-password">
                                    Email
                                </label>
                                <input readonly type="text" name="TaiKhoan" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" value="@Model.TaiKhoan">
                            </div>
                        </div>
                        <div class=" px-4 w-1/2">
                            <div class="relative w-full mb-3">
                                <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2" htmlfor="grid-password">
                                    Điện thoại
                                </label>
                                <input type="text" name="Sdt" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" value="@Model.Sdt">
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-wrap">
                        <div class="w-full lg:w-12/12 px-4">
                            <div class="relative w-full mb-3">
                                <label class="block uppercase text-blueGray-600 text-xs font-bold mb-2" htmlfor="grid-password">
                                    Địa chỉ
                                </label>
                                <input type="text" name="DiaChi" class="border-0 px-3 py-3 placeholder-blueGray-300 text-blueGray-600 bg-white rounded text-sm shadow focus:outline-none focus:ring w-full ease-linear transition-all duration-150" value="@Model.DiaChi">
                            </div>
                        </div>
                    </div>


                    <hr class="mt-6 border-b-1 border-blueGray-300">
                    <p class="text-red-500 my-2">@ViewBag.Noti</p>

                    <a href="/" class="float-right bg-gray-500 text-white active:bg-gray-600 font-bold uppercase text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 ease-linear transition-all duration-150" type="submit">
                        Hủy
                    </a>
                    <button class="float-right bg-pink-500 text-white active:bg-pink-600 font-bold uppercase text-xs px-4 py-2 rounded shadow hover:shadow-md outline-none focus:outline-none mr-1 ease-linear transition-all duration-150" type="submit">
                        Cập nhật
                    </button>
                </form>
            </div>
        </div>
        <footer class="relative  pt-8 pb-6 mt-2">
            <div class="container mx-auto px-4">
                <div class="flex flex-wrap items-center md:justify-between justify-center">
                    <div class="w-full md:w-6/12 px-4 mx-auto text-center">
                        <div class="text-sm text-blueGray-500 font-semibold py-1">
                            Made with <a href="https://www.creative-tim.com/product/notus-js" class="text-blueGray-500 hover:text-gray-800" target="_blank"></a> by <a href="https://www.creative-tim.com" class="text-blueGray-500 hover:text-blueGray-800" target="_blank"> Hà Tứ Huy</a>.
                        </div>
                    </div>
                </div>
            </div>
        </footer>

    </div>
</section>

