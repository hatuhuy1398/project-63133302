
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutBanHang.cshtml";
}

<section class="flex flex-col md:flex-row h-screen items-center py-10">

    <div class="bg-indigo-600 hidden lg:block w-full md:w-1/2 xl:w-2/3 h-screen">
        <img src="https://source.unsplash.com/random" alt="" class="w-full h-full object-cover">
    </div>

    <div class="bg-white w-full md:max-w-md lg:max-w-full md:mx-auto md:mx-0 md:w-1/2 xl:w-1/3 h-screen px-6 lg:px-16 xl:px-12
          flex items-center justify-center">

        <div class="w-full h-100">


            <h1 class="text-xl md:text-2xl font-bold leading-tight mt-12">Đăng ký</h1>

            <form class="mt-6" action="#" method="POST">
                <div class="flex gap-2">
                    <div class="w-1/2">
                        <label class="block text-gray-700">Họ</label>
                        <input type="text" name="Ho" id="" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus required>
                    </div>
                    <div class="w-1/2">
                        <label class="block text-gray-700">Tên</label>
                        <input type="text" name="Ten" id="" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus required>
                    </div>
                </div>
                <div>
                    <label class="block text-gray-700">Email</label>
                    <input type="email" name="TaiKhoan" id=""  class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500 focus:bg-white focus:outline-none" autofocus  required>
                </div>

                <div class="mt-4">
                    <label class="block text-gray-700">Mật khẩu</label>
                    <input type="password" name="MatKhau" id="" minlength="6" class="w-full px-4 py-3 rounded-lg bg-gray-200 mt-2 border focus:border-blue-500
                  focus:bg-white focus:outline-none" required>
                </div>

                <button type="submit" class="w-full block bg-indigo-500 hover:bg-indigo-400 focus:bg-indigo-400 text-white font-semibold rounded-lg
                px-4 py-3 mt-6">
                    Đăng ký
                </button>
                <p class="text-red-500 ">@ViewBag.error</p>
            </form>

            <hr class="my-6 border-gray-300 w-full">



            <p class="mt-8">Bạn đã có tài khoản? <a href="/TaiKhoan_63133302/dangnhap" class="text-blue-500 hover:text-blue-700 font-semibold">Đăng nhập</a></p>


        </div>
    </div>

</section>